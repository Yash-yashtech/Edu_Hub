@model IEnumerable<Edu_Hub_Project.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollment List";
    Layout = "/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-uppercase">Enrollment List</h1>
            <hr class="my-4" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.CourseId)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.EnrollmentDate)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                   
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnrollmentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            @* <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-sm btn-primary" }) 
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-sm btn-info" }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-sm btn-danger" })
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #fff;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .thead-dark th {
        background-color: #333;
        color: #fff;
    }

    .text-center {
        text-align: center;
    }

    .text-uppercase {
        text-transform: uppercase;
    }

    .py-4 {
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

    .my-4 {
        margin-top: 2rem;
        margin-bottom: 2rem;
    }
</style>