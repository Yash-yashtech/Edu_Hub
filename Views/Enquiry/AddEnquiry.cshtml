@model Edu_Hub_Project.Models.Enquiry

@{
    ViewData["Title"] = "Create Enquiry";
    Layout = "/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-primary my-4"><b>Create Enquiry</b></h1>
    <h4 class="text-center text-muted">Please fill in the details below</h4>
    <hr class="my-4" />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="AddEnquiry" class="bg-light p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
@* 
                <div class="form-group mb-3">
                    <label asp-for="UserId" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="UserId" class="form-control" placeholder="Enter User ID" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CourseId" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="CourseId" class="form-control" placeholder="Enter Course ID" />
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div> *@

                <div class="form-group mb-3">
                    <label asp-for="Subject" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="Subject" class="form-control" placeholder="Enter Subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Message" class="control-label font-weight-bold text-secondary"></label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Enter your message here..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EnquiryDate" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="EnquiryDate" class="form-control" type="date" />
                    <span asp-validation-for="EnquiryDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="Status" class="form-control" readonly />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Response" class="control-label font-weight-bold text-secondary"></label>
                    <input asp-for="Response" class="form-control" readonly />
                    <span asp-validation-for="Response" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create Enquiry" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center my-4">
    <a asp-controller="Course" asp-action="CourseList" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}