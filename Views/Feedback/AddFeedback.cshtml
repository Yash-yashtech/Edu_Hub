@model Edu_Hub_Project.Models.Feedback

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_LayoutStudent.cshtml";
}

<h1 class="text-center text-primary mt-4"><strong>Add Feedback</strong></h1>

<h4 class="text-center text-secondary mb-4">Your Feedback Is Important</h4>
<hr class="bg-primary mb-4" />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="AddFeedback" class="bg-light p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            @* <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" readonly />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div> *@
            
            <div class="form-group mb-3">
                <label asp-for="FeedbackText" class="control-label"></label>
                <textarea asp-for="FeedbackText" class="form-control" rows="4" placeholder="Enter your feedback here..."></textarea>
                <span asp-validation-for="FeedbackText" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center mb-4">
                <input type="submit" value="Add" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

