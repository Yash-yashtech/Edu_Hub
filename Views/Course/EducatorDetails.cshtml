@model Edu_Hub_Project.Models.Course

@{
    ViewData["Title"] = "Course Details";
    Layout = "/Views/Shared/_LayoutEducator.cshtml";
}

<!-- Custom CSS -->
<style>
    body {
        background-color: #e9ecef; /* Light background for better contrast */
    }

    .course-details {
        background-color: #ffffff; /* White background for the course details */
        padding: 40px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    .course-details h1 {
        font-weight: bold;
        color: #007bff;
        margin-bottom: 25px;
        font-size: 2.5em; /* Increased font size */
        text-align: center;
    }

    .course-details dt {
        font-weight: bold;
        color: #333;
        font-size: 1.3em; /* Increased font size */
    }

    .course-details dd {
        margin-left: 20px;
        color: #555;
        font-size: 1.2em; /* Increased font size */
        display: inline; /* Display inline */
        margin-right: 20px; /* Space between items */
    }

    .btn-show-material,
    .btn-secondary {
        background-color: #007bff;
        color: #fff;
        padding: 12px 30px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none; /* Remove underline */
    }

    .btn-show-material:hover,
    .btn-secondary:hover {
        background-color: #0056b3;
        transform: translateY(-2px); /* Slight lift effect on hover */
    }

    .text-center {
        margin-top: 30px;
    }


        
        .course-details h1 {
            font-size: 2em; /* Adjust font size for smaller screens */
        }
        
        .course-details dt,
        .course-details dd {
            font-size: 1em; /* Adjust font size for smaller screens */
            display: block; /* Stack items on smaller screens */
            margin-left: 0; /* Reset margin for smaller screens */
            margin-bottom: 10px; /* Add space between items */
        }
    }
</style>

<!-- Course Details Section -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 course-details">
            <h1>@ViewData["Title"]</h1>

            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CourseStartDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CourseStartDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CourseEndDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CourseEndDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Level)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Level)
                </dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-controller="Material" asp-action="MyMaterialEducator" asp-route-id="@Model.CourseId" class="btn-show-material">Show Material</a>
            </div>
        </div>
    </div>
</div>