@model IEnumerable<Edu_Hub_Project.Models.Course>

@{
    ViewData["Title"] = "All Courses by User ID";
    Layout = "/Views/Shared/_LayoutEduator.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_Hub_Project</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Internal CSS for Course List */
        body {
            background-color: #f8f9fa;
            /* Light background */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #1b6ec2;
            /* Primary color */
            text-align: center;
            margin-top: 20px;
        }

        .table {
            margin: 20px auto;
            /* Center the table */
            max-width: 80%;
            /* Set maximum width */
            background-color: #ffffff;
            /* White background for table */
            border-radius: 8px;
            /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* Subtle shadow */
        }

        .table th {
            background-color: #1b6ec2;
            /* Header background color */
            color: white;
            /* Header text color */
        }

        .table td {
            vertical-align: middle;
            /* Center align cells vertically */
        }

        .btn-primary {
            background-color: #1b6ec2;
            /* Button color */
            border-color: #1861ac;
        }

        .btn-primary:hover {
            background-color: #1861ac;
            /* Darker shade on hover */
        }
    </style>
</head>

<body>
    <h1>Course List</h1>
    

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CourseStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CourseEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Level)
                </th>
                <th></th> <!-- Placeholder for action buttons -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseStartDate.ToShortDateString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseEndDate.ToShortDateString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        <!-- Action buttons can be added here -->
                        <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-primary btn-sm">Edit</a>
                        <!-- Example Edit button -->
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Optional Back to List Link -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <!-- Bootstrap JS Bundle -->


</body>

</html>