@model IEnumerable<Edu_Hub_Project.Models.Course>

@{
    ViewData["Title"] = "Course Catalog";
    
    Layout = "/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Course Catalog</h1>
            @* <div class="search-bar">
                <div class="input-group">
                    @Html.TextBox("searchQuery", "", new { @class = "form-control", @placeholder = "Search courses..." })
                    <span class="input-group-btn">
                        @Html.ActionLink("Search", "Index", new { searchQuery = "" }, new { @class = "btn btn-primary" })
                    </span>
                </div>
            </div> *@
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card-deck">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @Html.DisplayFor(modelItem => item.CourseStartDate) - @Html.DisplayFor(modelItem => item.CourseEndDate)
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Category: @Html.DisplayFor(modelItem => item.Category)
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Level: @Html.DisplayFor(modelItem => item.Level)
                                </small>
                            </p>
                            <div class="btn-group">
                                @* @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-sm btn-primary" }) *@
                                @Html.ActionLink("Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-sm btn-secondary" })
                                @* @Html.ActionLink("Add Material", "Addmaterial", new { id = item.CourseId }, new { @class = "btn btn-sm btn-success" }) *@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>