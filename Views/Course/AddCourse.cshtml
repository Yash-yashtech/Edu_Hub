@model Edu_Hub_Project.Models.Course

@{
    ViewData["Title"] = "Create Course";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_Hub_Project</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Internal CSS for Course Creation Form */
        body {
            background-color: #f8f9fa; /* Light background */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #1b6ec2; /* Primary color */
            text-align: center;
            margin-top: 20px;
        }

        h4 {
            color: #6c757d; /* Muted color */
            text-align: center;
        }

        .container {
            background-color: #ffffff; /* White background for form */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px; /* Maximum width of the form */
            margin: auto; /* Center the container */
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #1b6ec2; /* Button color */
            border-color: #1861ac;
            width: 100%; /* Full width button */
        }

        .btn-primary:hover {
            background-color: #1861ac; /* Darker shade on hover */
        }

        .text-danger {
            font-size: 0.9em; /* Slightly smaller error messages */
        }
    </style>
</head>
<body>
    <h1>Create Course</h1>

    <div class="container">
        <h4>Course Details</h4>
        <hr />
        <form asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

           

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required placeholder="Enter course title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required placeholder="Enter course description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseStartDate" class="control-label"></label>
                <input asp-for="CourseStartDate" type="date" class="form-control" required />
                <span asp-validation-for="CourseStartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseEndDate" class="control-label"></label>
                <input asp-for="CourseEndDate" type="date" class="form-control" required />
                <span asp-validation-for="CourseEndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" required placeholder="Enter User ID"/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" required placeholder="Enter course category"/>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <select asp-for="Level" class="form-control">
                    <option value="">Select Level</option>
                    <option value="beginner">Beginner</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="advanced">Advanced</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg"/>
            </div>
        </form>
    </div>

    <!-- Back to List Link -->
    <div class="text-center mt-3">
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <!-- Bootstrap JS Bundle -->
  
</body>
</html>