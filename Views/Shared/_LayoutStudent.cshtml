<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Edu_Hub_Project.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #f8f9fa;
            /* Light grey background */
        }

        .navbar-nav .nav-link {
            color: #343a40;
            /* Dark grey text */
        }

        .navbar-nav .nav-link:hover {
            color: #007bff;
            /* Bootstrap primary color on hover */
        }

        footer {
            background-color: #343a40;
            /* Dark grey footer */
            color: white;
        }

        footer a {
            color: #007bff;
            /* Bootstrap primary color for footer links */
        }

        footer a:hover {
            color: #0056b3;
            /* Darker blue on hover */
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Edu_Hub_Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Course"
                                asp-action="CourseList">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Enquiry" asp-action="MyEnquiry">My
                                Enquiry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Enrollment" asp-action="MyEnrollment" asp-route-id="">My
                                Enrollment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Feedback" asp-action="MyFeedback">My
                                Feedbacks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Logout">Log Out</a>
                        </li>
                    </ul>
                      <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle me-2" style="font-size: 1.5rem;"></i>
                            <span class="navbar-text">
                                @TempData["Username"]
                            </span>
                        </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Edu_Hub_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
