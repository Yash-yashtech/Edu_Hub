@model Edu_Hub_Project.Login

@{
    ViewData["Title"] = "StudentLogin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_Hub_Project</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <style>
        /* Internal CSS for Student Login Form */
        body {
            background-image: url('https://images.unsplash.com/photo-1517694712202-14iyeob2f7f6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80'); /* New background image */
            background-size: cover; /* Cover the entire background */
            background-position: center; /* Center the background image */
            opacity: 0.8; /* Add opacity to the background image */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #1b6ec2; /* Primary color */
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .container {
            background-color: #ffffff; /* White background for form */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            max-width: 400px; /* Maximum width of the form */
            margin: auto; /* Center the container */
            background-image: linear-gradient(to bottom, #ffffff, #f7f7f7);
        }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .btn-primary {
            background-color: #1b6ec2; /* Button color */
            border-color: #1861ac;
            width: 100%; /* Full width button */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            transition: background-color 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #1861ac; /* Darker shade on hover */
        }

        .text-danger {
            font-size: 0.9em; /* Slightly smaller error messages */
            color: #dc3545;
        }

        /* Additional CSS */
        .login-form {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .login-form .form-control {
            height: 40px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
        }

        .login-form .form-control:focus {
            border-color: #1b6ec2;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .login-form .btn-primary {
            height: 40px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>Student Login</h1>

    <div class="container">
        <hr />
        <form asp-action="SLogin" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Login" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <!-- Bootstrap JS Bundle -->
</body>
</html>