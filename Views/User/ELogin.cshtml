@model Edu_Hub_Project.Login

@{
    ViewData["Title"] = "EducatorLogin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Edu_Hub_Project</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

    <!-- Custom CSS -->
    <style>
        /* Internal CSS for Educator Login Form */
        body {
            background-image: linear-gradient(to bottom, #f8f9fa, #e9ecef); /* Gradient background */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #1b6ec2; /* Primary color */
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            font-size: 36px;
        }

        .container {
            background-color: #ffffff; /* White background for form */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            max-width: 400px; /* Maximum width of the form */
            margin: auto; /* Center the container */
            margin-top: 50px; /* Add some space from the top */
        }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            height: 45px; /* Increase input field height */
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #1b6ec2; /* Button color */
            border-color: #1861ac;
            width: 100%; /* Full width button */
            height: 45px; /* Increase button height */
            font-size: 18px;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .btn-primary:hover {
            background-color: #1861ac; /* Darker shade on hover */
            border-color: #1b6ec2;
        }

        .text-danger {
            font-size: 0.9em; /* Slightly smaller error messages */
            color: #dc3545; /* Error message color */
        }

        /* Add some animations */
        .container {
            animation: fadeIn 0.5s;
        }

        
        }
    </style>
</head>
<body>
    <h1>Educator Login</h1>

    <div class="container">
        <hr />
        <form asp-action="ELogin">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Login" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>