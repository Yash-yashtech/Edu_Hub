@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero {
        background-color: #46aaec;
        color: #fff;
        padding: 80px 0;
        text-align: center;
        position: relative;
    }

    .hero h1 {
        font-size: 48px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .hero p {
        font-size: 18px;
        margin-bottom: 40px;
    }

    .hero img {
        width: 300px;
        height: 300px;
        margin: 30px auto;
    }

    .hero hr {
        border: none;
        border-top: 1px solid #fff;
        width: 50%;
        margin: 20px auto;
    }

    .hero button {
        margin: 10px;
        padding: 10px 20px;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .hero button:hover {
        background-color: #2ecc71;
        color: #fff;
    }

    .features {
        padding: 50px 0;
    }

    .features .card {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        /* Added transition for smooth effect */
    }

    .features .card h2 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .features .card p {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .features .card i {
        font-size: 48px;
        margin-bottom: 20px;
        /* Adjusted for better spacing */
    }

    .features .card:hover {
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
        /* Added lift effect on hover */
    }

    /* New styles for login buttons */
    .login-buttons {
        margin-top: 30px;
        /* Space above the buttons */
    }

    .login-buttons button {
        background-color: #e74c3c;
        /* Red color for Login buttons */
        color: white;
    }

    .login-buttons button:hover {
        background-color: #c0392b;
        /* Darker red on hover */
    }
</style>

<div class="hero">
    <h1 class="display-4 text-white"><b>Welcome To EduHub</b></h1>
    <p class="lead text-white">Your one-stop platform for learning and growth.</p>
    <img src="~/Logo.png" alt="Your Image" />
    <hr class="my-4" />
    <p class="text-white">Explore our vast library of courses, tutorials, and resources to unlock your full potential.
    </p>

    <div class="login-buttons">
        <a asp-controller="User" asp-action="SLogin">
            <button class="btn btn-danger btn-lg">Student Login</button> </a>
        <a asp-controller="User" asp-action="ELogin">
            <button class="btn btn-danger btn-lg">Educator Login</button>
        </a>
        @* <button class="btn btn-success btn-lg">Get Started</button>
        <button class="btn btn-info btn-lg">Learn More</button> *@
    </div>
</div>

<div class="features">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <i class="fas fa-chalkboard-teacher fa-3x text-primary"></i>
                    <h2 class="card-title">Learn from Experts</h2>
                    <p class="card-text">Our courses are designed and taught by industry experts with years of
                        experience.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <i class="fas fa-robot fa-3x text-info"></i>
                    <h2 class="card-title">Personalized Learning</h2>
                    <p class="card-text">Our platform uses AI-powered technology to provide personalized learning
                        recommendations.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <i class="fas fa-users fa-3x text-success"></i>
                    <h2 class="card-title">Community Support</h2>
                    <p class="card-text">Join our community of learners and get support from peers and mentors.</p>
                </div>
            </div>
        </div>
    </div>
</div>